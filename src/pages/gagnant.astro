---
import Layout from "../layouts/Layout.astro";
import logo_pupille from "/logo_pupille.svg";
import RandomGenerator from "../components/RandomGenerator.jsx";
---

<Layout title="Welcome to Astro.">
  <main>
    <div
      class="h-screen bg-cover grid grid-cols-1 grid-rows-3"
      style={{ backgroundImage: "url(/background.png)" }}
    >
      <div class="flex flex-col items-center justify-evenly">
        <div>
          <img src={logo_pupille} alt="svg icon" />
        </div>
        <div
          class="px-6 py-4 text-center bg-gray-400 rounded-md bg-clip-padding backdrop-filter backdrop-blur-sm bg-opacity-30"
        >
          <h2 class="text-white text-md font-thin">Résultats du jour dans</h2>
          <h2 class="text-white text-lg font-bold">00 : 00 : 00</h2>
        </div>
      </div>
      <div class="flex flex-col items-center justify-center text-center">
        <div
          class="px-6 py-4 rounded-lg bg-gray-400 bg-clip-padding backdrop-filter backdrop-blur-sm bg-opacity-30"
        >
          <h1 class="text-white text-1xl font-thin">Mon numéro gagnant</h1>
          <h2 class="text-white text-4xl">GG 353 837 730</h2>
        </div>
      </div>
    </div>
  </main>
</Layout>
